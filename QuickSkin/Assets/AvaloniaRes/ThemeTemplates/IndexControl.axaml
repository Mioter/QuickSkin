<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:control="clr-namespace:QuickSkin.SceneControls">
    <!-- Add Resources Here -->

    <ControlTheme x:Key="{x:Type control:IndexControl}" TargetType="control:IndexControl">
        <Setter Property="Template">
            <ControlTemplate>
                <TransitioningContentControl Name="PART_TransitioningContent"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch" />
            </ControlTemplate>
        </Setter>
    </ControlTheme>

</ResourceDictionary>