<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:anchorPanelControl="clr-namespace:QuickSkin.UI.Controls.AnchorControl">

    <ControlTheme x:Key="{x:Type anchorPanelControl:AnchorItem}"
                  TargetType="anchorPanelControl:AnchorItem">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <!-- 标题栏 -->
                    <Panel Background="{DynamicResource SemiColorBackground0}" VerticalAlignment="Top" Height="{TemplateBinding HeaderHeight}">
                        <ContentPresenter Content="{TemplateBinding Header}"
                                          VerticalAlignment="Center" />
                    </Panel>
                    <!-- 内容区 -->
                    <ContentPresenter Content="{TemplateBinding Content}" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>